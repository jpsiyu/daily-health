/* pages/project/project.wxss */
.project{
    font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.accumulate{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.recover-time {
    flex: 1;
    background-color: lightcoral;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
}

.recover-time image{
    width: 100rpx;
    height: 100rpx;
    animation-name: cat;
    animation-duration: 5s;
    animation-iteration-count: infinite;
}

.energy-place{
    flex: 3;
    display: flex;
    align-items: center;
}

.energy-container{
    width: 300rpx;
    height: 300rpx;
    overflow: hidden;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    border-radius: 50%;
    box-sizing: border-box;
    border: 1px green solid;
}

.energy-cover{
    width: 100%;
    height: 100%;
}

.energy-cover image{
    width: 100%;
    height: 100%;
}

.p-root{
    flex:1;
    display: flex;
}

.p-desc{
    flex: 1;
    background-color: green;
    color: white;
    display: flex;
    justify-content: center;
}

.p-desc p{
    margin-top: 10px;
    width: 70%;
    box-sizing: border-box;
}

.p-items{
    background-color: lightblue;
    flex: 1;
    display: grid;
    grid-template-columns: repeat(2, 150rpx);
    grid-template-rows: repeat(2, 150rpx);
    grid-gap: 10px;
    grid-auto-flow: row;
    justify-content: center;
    padding-top: 10px;
    border-left: 1px solid white;
}

.item{
    height: 150rpx;
}

.item div{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;    
    align-items: flex-start;
    border-radius: 2px;
    box-shadow: 4px 4px 2px rgba(0,0,0,0.5);
    border-radius: 20rpx;
    box-sizing: border-box;
}

.item-active{
    background-color: green;
    color: white;
    padding: 10px;
    box-sizing: border-box;
}

.item-sleep{
    background-color: lightseagreen;
    color: white;
    padding: 10px;
    box-sizing: border-box;
}

.particle-container{
    position: absolute;
    top: 34vh;
    width: 20rpx;
    height: 20rpx;
}

.particle{
    position: absolute;
    width: 20rpx;
    height: 20rpx;
    background-color: green;
    opacity: 0.5;
    border-radius: 50%;
    box-shadow: 1px 1px 0.5px rgba(0,0,0,0.5);
}

@keyframes cat{
    0% {transform: rotateZ(0);}
    25% {transform: rotateZ(45deg);}
    50% {transform: rotateZ(0);}
    75% {transform: rotateZ(-45deg);}
    0% {transform: rotateZ(0);}
}