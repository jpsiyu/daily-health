/* pages/main/main.wxss */

.main{
    height: 100vh;
    display: flex;
    flex-direction: column;
}

.score{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.score image{
    max-width: 100%;
    max-height: 100%;
    box-sizing: border-box;
}

.score p{
    font-size: 4rem;
    font-weight: bolder;
}

/**********************************************/

.energy{
    position: absolute;
    width: 100rpx;
    height: 100rpx;
    box-sizing: border-box;
    right: 0;
    top: 20%;
    overflow: hidden;
    display: flex;
    align-items: flex-end;
    border-radius: 50%;
    background-color: lightgray;
}

.energy-cover{
    display: flex;
    width: 100%;
    height: 50%;
    box-sizing: border-box;
}

.energy-cover image{
    width: 100%;
    height: 100%;

}
/**********************************************/

.project{
    flex: 2;
    display: grid;
    grid-template-columns: 1fr 1fr;
}

.project-item{
    background-color: lightgray;
    color: green;
    width: 98%;
    height: 98%;
    align-self: center;
    justify-self: center;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 2rem;
    font-weight: bolder;
}

.project-item:active{
    background-color: green;
    color: white;
}

.project-mid{
    width: 100%;
    height: 66.6vh;
    top: 33.3%;
    position: absolute;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: none;
    font-weight: bolder;
}

.project-mid div{
    pointer-events: all;
    border-radius: 50%;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
}

.mid-on {
    pointer-events: all;
    background-color: goldenrod;
    height: 50%;
    width: 50%;
    font-size: 3rem;
    animation-name: mid-on;
    animation-duration: 0.2s;
}

.mid-off {
    pointer-events: none;
    background-color: gray;
    width: 20%;
    height: 20%;
    font-size: 1rem;
    animation-name: mid-off;
    animation-duration: 0.2s;
}

/**********************************************/

@keyframes mid-on{
    0% {width: 20%; height: 20%; font-size: 1rem}
    100% {width: 50%; height: 50%; font-size: 3rem;}
}

@keyframes mid-off{
    0% {width: 50%; height: 50%; font-size: 3rem;}
    100% {width: 20%; height: 20%; font-size: 1rem}
}


