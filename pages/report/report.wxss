/* pages/report/report.wxss */
.report{
    height: 100vh;
    display: flex;
    flex-direction: column;
}

.share{
    flex: 1;
    display: flex;
    justify-content: flex-start;
}

.share p{
    flex: 2;
}

.share button{
    flex: 1;
    display: inline-block;
    height: 50%;
}

.calculate{
    flex: 5;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.cal-item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 15%;
    background-color: gray;
    width: 100%;
}